# CORS Configuration (Update this with your Netlify URL)
CORS_ORIGIN=https://your-app.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
SESSION_SECRET=your_session_secret
